/* 布局 */
.detailWrapper {
  height: 85vh;
}
.detailWrapper .top {
  height: 80rpx;
  width: 100%;
}
.detailWrapper .body {
  height: calc(100% - 220rpx);
}
.detailWrapper .body .scrollView {
  height: 100%;
  padding: 0 30rpx;
}
.detailWrapper .body .scrollView .thumb {
  width: 690rpx;
  height: 690rpx;
}
.detailWrapper .body .scrollView .thumb .img {
  width: 100%;
  height: 100%;
}
.detailWrapper .body .scrollView .info {
  padding: 20rpx 0;
  border-bottom: 1px solid #efefef;
}
.detailWrapper .body .scrollView .info .title {
  font-size: 40rpx;
  font-weight: bold;
}
.detailWrapper .body .scrollView .info .priceView {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
}
.detailWrapper .body .scrollView .info .priceView .price {
  font-size: 46rpx;
  font-weight: bold;
  color: #EC544F;
}
.detailWrapper .body .scrollView .info .priceView .originalPrice {
  font-size: 28rpx;
  color: #a7a7a7;
  font-weight: bold;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.detailWrapper .body .scrollView .info .priceView .discount {
  border: 1px solid #EC544F;
  color: #EC544F;
  font-size: 22rpx;
  padding: 2rpx 20rpx;
  margin-left: 10rpx;
  border-radius: 8rpx;
}
.detailWrapper .body .scrollView .text {
  padding: 20rpx 0;
}
.detailWrapper .body .scrollView .text .title {
  font-size: 32rpx;
  font-weight: bold;
}
.detailWrapper .body .scrollView .text .description {
  padding: 20rpx 0;
  line-height: 1.7em;
}
.detailWrapper .body .scrollView .picList .img {
  width: 100%;
  margin-bottom: 30rpx;
}
.detailWrapper .body .scrollView .intro {
  padding: 40rpx 0;
  font-size: 30rpx;
  color: #a7a7a7;
  text-align: center;
}
.detailWrapper .footer {
  height: 140rpx;
  border-top: 1px solid #efefef;
  display: flex;
  justify-content: space-between;
  align-items: center;
  justify-content: center;
  align-items: center;
  padding: 0 200rpx;
}

